---
import "../styles/generel.css";

// Henter parametrene fra Astro.props
const { href = "#", target = "_blank", variant = "primary" } = Astro.props;

const linkStyling = "text-[#252423] font-['cormorant'] text-2xl md:text-3xl";

const variantClasses = {
  primary: "hover:drop-shadow",
};
---

<a
  href={href}
  target={target}
  class:list={[linkStyling, variantClasses[variant]]}
  class="w-fit"><slot /></a
>
